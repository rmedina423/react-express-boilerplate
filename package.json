{
  "name": "react-express-boilerplate",
  "version": "1.0.0",
  "description": "this is a boilerplate project to get you started using react & express",
  "main": "index.js",
  "author": "Ryan M. Medina",
  "license": "MIT",
  "scripts": {
    "start": "nodemon ./server/runServer.js",
    "lint": "eslint ./",
    "test": "NODE_ENV=test yarn test:client && yarn test:server && yarn lint",
    "test:coverage": "NODE_ENV=test yarn test:client -- --coverage && yarn test:server -- --coverage",
    "test:client": "jest -c ./client/jest.client.config.json",
    "test:server": "NODE_ENV=test jest -c ./server/jest.server.config.json",
    "presendCoverage": "lcov-result-merger './coverage/**/lcov.info' ./coverage/lcov.info",
    "sendCoverage": "echo 'you need to set up code coverage integration with your tool of choice!'",
    "webpack:analyzer": "webpack --config webpack.prod.config.js --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "webpack": "webpack --config webpack.prod.config.js",
    "server": "NODE_ENV='production' node server/runServer",
    "prod": "NODE_ENV='production' yarn webpack && yarn server",
    "dev": "nodemon ./server/runServer.js"
  },
  "dependencies": {
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "webpack": "^2.5.1",
    "webpack-dev-middleware": "^1.10.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.1",
    "babel-loader": "^7.0.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "^7.0.0",
    "jest": "^20.0.1",
    "jest-enzyme": "^3.1.1",
    "lcov-result-merger": "^1.2.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.5.4",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.17.0",
    "supertest": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2"
  }
}
